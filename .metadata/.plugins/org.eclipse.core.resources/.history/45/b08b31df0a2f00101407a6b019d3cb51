	<script type="text/javascript" crossorigin="anonymous"
		src="https://us-assets.i.posthog.com/array/phc_t9tkQZJiyi2ps9zUYm8TDsL6qXo4YmZx0Ot5rBlAlEd/config.js"></script>
	<script type="text/javascript" crossorigin="anonymous"
		src="https://us-assets.i.posthog.com/static/dead-clicks-autocapture.js?v=1.240.6"></script>
	<script>
document.addEventListener('DOMContentLoaded', function() {
const chatContainer = document.getElementById('chat-container');
const optionButtons = document.querySelectorAll('.option-button');
const savedItineraries = document.getElementById('saved-itineraries');
const travelTab = document.getElementById('travelTab');
const supportTab = document.getElementById('supportTab');
let conversationState = 'initial';
let currentMode = 'travel';

function switchMode(mode) {
currentMode = mode;
chatContainer.innerHTML = '';
if (mode === 'travel') {
travelTab.classList.add('bg-primary', 'text-white');
travelTab.classList.remove('text-gray-600', 'hover:bg-gray-100');
supportTab.classList.remove('bg-primary', 'text-white');
supportTab.classList.add('text-gray-600', 'hover:bg-gray-100');
addMessage("안녕하세요! 저는 당신의 여행 플래너입니다. 어떤 여행을 계획하고 계신가요?");
addTravelOptions();
} else {
supportTab.classList.add('bg-primary', 'text-white');
supportTab.classList.remove('text-gray-600', 'hover:bg-gray-100');
travelTab.classList.remove('bg-primary', 'text-white');
travelTab.classList.add('text-gray-600', 'hover:bg-gray-100');
addMessage("안녕하세요! 무엇을 도와드릴까요?");
addSupportOptions();
}
}

function addSupportOptions() {
const supportOptionsDiv = document.createElement('div');
supportOptionsDiv.className = 'chat-message';
supportOptionsDiv.innerHTML = `
<div class="flex items-start gap-3">
<div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center flex-shrink-0">
<i class="ri-robot-line text-white"></i>
</div>
<div class="flex-grow">
<div class="grid grid-cols-1 sm:grid-cols-2 gap-3 mt-4">
<button class="option-button bg-white border-2 border-primary text-primary px-4 py-3 rounded-lg font-medium hover:bg-primary hover:text-white transition-colors">
<i class="ri-question-line mr-2"></i>예약 문의
</button>
<button class="option-button bg-white border-2 border-primary text-primary px-4 py-3 rounded-lg font-medium hover:bg-primary hover:text-white transition-colors">
<i class="ri-refund-line mr-2"></i>환불 요청
</button>
<button class="option-button bg-white border-2 border-primary text-primary px-4 py-3 rounded-lg font-medium hover:bg-primary hover:text-white transition-colors">
<i class="ri-service-line mr-2"></i>서비스 이용
</button>
<button class="option-button bg-white border-2 border-primary text-primary px-4 py-3 rounded-lg font-medium hover:bg-primary hover:text-white transition-colors">
<i class="ri-error-warning-line mr-2"></i>기타 문의
</button>
</div>
</div>
</div>
`;
chatContainer.appendChild(supportOptionsDiv);
}

travelTab.addEventListener('click', () => switchMode('travel'));
supportTab.addEventListener('click', () => switchMode('support'));
function addTravelOptions() {
const travelOptionsDiv = document.createElement('div');
travelOptionsDiv.className = 'chat-message';
travelOptionsDiv.innerHTML = `
<div class="flex items-start gap-3">
<div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center flex-shrink-0">
<i class="ri-robot-line text-white"></i>
</div>
<div class="flex-grow">
<div class="grid grid-cols-1 sm:grid-cols-2 gap-3 mt-4">
<button class="option-button bg-white border-2 border-primary text-primary px-4 py-3 rounded-lg font-medium hover:bg-primary hover:text-white transition-colors">
<i class="ri-group-line mr-2"></i>가족 여행
</button>
<button class="option-button bg-white border-2 border-primary text-primary px-4 py-3 rounded-lg font-medium hover:bg-primary hover:text-white transition-colors">
<i class="ri-heart-line mr-2"></i>커플 여행
</button>
<button class="option-button bg-white border-2 border-primary text-primary px-4 py-3 rounded-lg font-medium hover:bg-primary hover:text-white transition-colors">
<i class="ri-user-line mr-2"></i>혼자 여행
</button>
<button class="option-button bg-white border-2 border-primary text-primary px-4 py-3 rounded-lg font-medium hover:bg-primary hover:text-white transition-colors">
<i class="ri-team-line mr-2"></i>친구와 함께
</button>
</div>
</div>
</div>
`;
chatContainer.appendChild(travelOptionsDiv);
}

function addMessage(content, isUser = false) {
const messageDiv = document.createElement('div');
messageDiv.className = 'chat-message';
messageDiv.innerHTML = `
<div class="flex items-start gap-3 ${isUser ? 'justify-end' : ''}">
${isUser ? '' : `
<div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center flex-shrink-0">
<i class="ri-robot-line text-white"></i>
</div>
`}
<div class="flex-grow ${isUser ? 'text-right' : ''}">
<div class="bg-${isUser ? 'primary text-white' : 'gray-100 text-gray-800'} rounded-lg p-4 inline-block">
<p>${content}</p>
</div>
</div>
${isUser ? `
<div class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center flex-shrink-0">
<i class="ri-user-line text-gray-600"></i>
</div>
` : ''}
</div>
`;
chatContainer.appendChild(messageDiv);
chatContainer.scrollTop = chatContainer.scrollHeight;
}
function showTypingIndicator() {
const typingDiv = document.createElement('div');
typingDiv.className = 'chat-message typing-message';
typingDiv.innerHTML = `
<div class="flex items-start gap-3">
<div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center flex-shrink-0">
<i class="ri-robot-line text-white"></i>
</div>
<div class="typing-indicator">
<span></span>
<span></span>
<span></span>
</div>
</div>
`;
chatContainer.appendChild(typingDiv);
chatContainer.scrollTop = chatContainer.scrollHeight;
return typingDiv;
}
function removeTypingIndicator() {
const typingMessage = document.querySelector('.typing-message');
if (typingMessage) {
typingMessage.remove();
}
}
function askNextQuestion(travelType) {
const typingIndicator = showTypingIndicator();
setTimeout(() => {
removeTypingIndicator();
if (conversationState === 'initial') {
addMessage(`${travelType}을 선택하셨네요! 여행 기간은 어떻게 되시나요?`);
const durationOptions = [
'2박 3일', '3박 4일', '4박 5일', '5박 6일'
];
addOptionsButtons(durationOptions, 'duration');
conversationState = 'duration';
}
}, 1500);
}
function addOptionsButtons(options, type) {
const buttonsDiv = document.createElement('div');
buttonsDiv.className = 'chat-message';
buttonsDiv.innerHTML = `
<div class="flex items-start gap-3">
<div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center flex-shrink-0">
<i class="ri-robot-line text-white"></i>
</div>
<div class="flex-grow">
<div class="grid grid-cols-2 gap-3 mt-4">
${options.map(option => `
<button class="option-button bg-white border-2 border-primary text-primary px-4 py-3 rounded-lg font-medium hover:bg-primary hover:text-white transition-colors" data-type="${type}">
${option}
</button>
`).join('')}
</div>
</div>
</div>
`;
chatContainer.appendChild(buttonsDiv);
chatContainer.scrollTop = chatContainer.scrollHeight;
const newButtons = buttonsDiv.querySelectorAll('.option-button');
newButtons.forEach(button => {
button.addEventListener('click', function() {
const selectedOption = this.textContent.trim();
addMessage(selectedOption, true);
if (type === 'duration') {
showItinerary(selectedOption);
savedItineraries.classList.remove('hidden');
}
});
});
}
function showItinerary(duration) {
const typingIndicator = showTypingIndicator();
setTimeout(() => {
removeTypingIndicator();
addMessage(`
여행 일정을 생성했습니다! 다음은 추천 일정입니다:
1일차: 제주공항 → 성산일출봉 → 섭지코지 → 아쿠아플라넷
2일차: 우도 투어 → 만장굴 → 김녕해수욕장
3일차: 한라산 등반 → 에코랜드 → 노형수퍼마켓
${duration === '4박 5일' || duration === '5박 6일' ? `4일차: 올레시장 → 천지연폭포 → 서귀포매일올레시장
5일차: 카멜리아힐 → 오설록티뮤지엄 → 협재해수욕장` : ''}
이 일정은 어떠신가요? 저장하시겠습니까?
`);
addMessage(`
<div class="flex flex-col gap-3">
<button class="bg-primary text-white px-6 py-3 !rounded-button font-medium flex items-center justify-center gap-2" onclick="saveItinerary()">
<i class="ri-save-line"></i>
일정 저장하기
</button>
<button class="bg-white text-primary border border-primary px-6 py-3 !rounded-button font-medium flex items-center justify-center gap-2" onclick="modifyItinerary()">
<i class="ri-edit-line"></i>
일정 수정하기
</button>
</div>
`);
}, 2000);
}
window.saveItinerary = function() {
addMessage('일정이 저장되었습니다! 저장된 일정 목록에서 확인하실 수 있습니다.', true);
const savedItineraries = document.getElementById('saved-itineraries');
savedItineraries.classList.remove('hidden');
};
window.modifyItinerary = function() {
addMessage('어떤 부분을 수정하고 싶으신가요? 아래 옵션 중 선택해주세요.');
addMessage(`
<div class="grid grid-cols-2 gap-3 mt-2">
<button class="bg-white border-2 border-primary text-primary px-4 py-3 rounded-lg font-medium hover:bg-primary hover:text-white transition-colors">일정 순서 변경</button>
<button class="bg-white border-2 border-primary text-primary px-4 py-3 rounded-lg font-medium hover:bg-primary hover:text-white transition-colors">장소 변경</button>
<button class="bg-white border-2 border-primary text-primary px-4 py-3 rounded-lg font-medium hover:bg-primary hover:text-white transition-colors">시간 조정</button>
<button class="bg-white border-2 border-primary text-primary px-4 py-3 rounded-lg font-medium hover:bg-primary hover:text-white transition-colors">일정 추가</button>
</div>
`);
};
window.saveItinerary = function() {
addMessage('일정이 저장되었습니다!');
};
window.modifyItinerary = function() {
addMessage('어떤 부분을 수정하고 싶으신가요?');
};
optionButtons.forEach(button => {
button.addEventListener('click', function() {
const selectedOption = this.textContent.trim();
addMessage(selectedOption, true);
askNextQuestion(selectedOption);
});
});
});
</script>
	<!-- 헤더 -->
	<header class="bg-white shadow-sm sticky top-0 z-50">
		<div
			class="container mx-auto px-4 py-3 flex items-center justify-between">
			<div class="flex items-center">
				<a href="#" class="font-['Pacifico'] text-primary text-2xl">Tripin</a>
				<nav class="ml-8 hidden md:flex">
					<a href="#"
						class="px-4 py-2 text-gray-700 hover:text-primary font-medium">홈</a>
					<a href="#"
						class="px-4 py-2 text-gray-700 hover:text-primary font-medium">여행지</a>
					<a href="#"
