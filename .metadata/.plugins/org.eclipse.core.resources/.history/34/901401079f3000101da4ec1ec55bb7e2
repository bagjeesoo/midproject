$(function(){
	
	// 페이지 첫 화면
	$('#place-saved').addClass("tab-active");
	$('#themes-saved').removeClass("tab-active");
	$('#review-written').removeClass("tab-active");
	
	$('#content-themes').hide();
	$('#content-reviews').hide();	
	
	$('#content-places').show();
	
	// 프로필 사진 편집(연필아이콘) 눌렀을 때
	$('#edit-profile-photo-btn').click(function(){
		alert('프로필사진 편집');
	})
	
	// 프로필 편집 눌렀을 때(프로필 편집 페이지?로 이동)
	$('#edit-profile-btn').click(function(){
		alert('프로필 편집');
	})
	
	
	
	// 저장한 여행지, 저장한 테마, 내가 작성한 리뷰 버튼 클릭 이벤트(탭팬)
	$('#place-saved').click(function(){
		$(this).addClass("tab-active");
		$('#themes-saved').removeClass("tab-active");
		$('#review-written').removeClass("tab-active");
		
		$('#content-themes').hide();
		$('#content-reviews').hide();
		
		
		
		$('#content-places').show();

	})
	
	$('#themes-saved').click(function(){
		$(this).addClass("tab-active");
		$('#place-saved').removeClass("tab-active");
		$('#review-written').removeClass("tab-active");
		
		$('#content-reviews').hide();
		$('#content-places').hide();
		
		$('#content-themes').show();
	})

	$('#review-written').click(function(){
		$(this).addClass("tab-active");
		$('#place-saved').removeClass("tab-active");
		$('#themes-saved').removeClass("tab-active");
		
		$('#content-places').hide();
		$('#content-themes').hide();
		
		$('#content-reviews').show();
	})
	
	// 저장한 여행지에서 '상세정보' 클릭 시(여행지 정보 페이지로 이동)
	$('.detail-button').click(function(){
		alert('상세정보')
	})
	
	// 저장한 여행지에서 하트 눌렀을 시 (true/false로 설정)
	$('.heart-button').click(function(){
		//$(this).removeClass('heart-button')
	})
	
})